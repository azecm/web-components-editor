{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "esnext",//commonjs
    "target": "es2015",
    "lib": [
      "dom",
      "es2017.object",
      "es6",
      "es2016"
    ],
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    //"useDefineForClassFields": true,
    //"noEmitHelpers": false,
    "downlevelIteration": true,
    "importHelpers": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "api": ["./api/index.ts"],
      "element": ["./elements/index.ts"],
      "env": ["./api/env-dev.ts"],
    }
  },
  "exclude": [
    "node_modules"
  ]
}